</head>
<body class="body">
  


<!-- Begin page content -->
<main role="main" class="container">
  <div class="jumbotron" style="background-color: plum;">
  <div class="container">
    <h3 class="orders">Orders</h3>
    <ul class="messages" class="list-group">
    <div class="container" id = 'con1'>
    <% console.log(messages) %>
    <% for(var i=0; i<messages.length; i++) {%>
      <% if(messages[i].completed === false) {%>
      <li class="message" class="list-group-item">
        <span>
          <span><span class="firstName"><%=`${messages[i].name}: `%></span><%=`${messages[i].serverArray[0]} with ${messages[i].serverArray[1]} & ${messages[i].serverArray[2]}`%>
        </span>
        <span><i class="fas fa-check-square" data-name="<%= messages[i]._id%>" data-array="<%= messages[i].serverArray%>" data-barista= "<%= user.local.email %>"  aria-hidden="true"></i></span>
      </li>
    <% } %>
    <% } %>
    </div>
    <div class="container" id = 'con2'>
    <% for(var i=0; i<messages.length; i++) {%>
      <% if(messages[i].completed === true) {%>
      <li class="notCompleteMessage">
        <span><%= `Completed By: `+ messages[i].barista + ": " + messages[i].serverArray %></span>
      </li>
    <% } %>
    <% } %>
    </div>

    </ul>
  </div>
  </div> 
</main>



